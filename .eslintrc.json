{
  "extends": [
    "react-app",
    "eslint:recommended",
    "plugin:jsx-a11y/recommended",
    "plugin:react/recommended"
  ],
  "plugins": [
    "jsx-a11y",
    "react"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "max-len": ["error", {
      "code": 120
    }],
    "semi": "error",
    "comma-dangle": ["error", "always-multiline"],
    "comma-spacing": ["error", {
      "before": false, "after": true
    }]
  }
}
